#pragma once

inline sampler_t make_std_sampler() {
    const sampler_t smp_volume = CLK_NORMALIZED_COORDS_FALSE |
                                 CLK_ADDRESS_CLAMP |
                                 CLK_FILTER_NEAREST;
     return smp_volume;
}

inline sampler_t make_std_interpolating_sampler() {
    const sampler_t smp_volume = CLK_NORMALIZED_COORDS_FALSE |
                                 CLK_ADDRESS_CLAMP |
                                 CLK_FILTER_LINEAR;
     return smp_volume;
}
